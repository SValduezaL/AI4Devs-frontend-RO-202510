# ============================================
# Configuración de Base de Datos
# ============================================
DB_USER=tu_usuario_db
DB_PASSWORD=tu_contraseña_db
DB_NAME=tu_nombre_db
DB_HOST=localhost
DB_PORT=5433

# URL de conexión a la base de datos (usada por Prisma)
# Se construye automáticamente desde las variables anteriores
DATABASE_URL=postgresql://:@:/

# ============================================
# Configuración del Backend
# ============================================
BACKEND_PORT=3010
BACKEND_HOST=localhost

# URL del backend (usada por el frontend)
BACKEND_URL=http://localhost:3010

# ============================================
# Configuración del Frontend
# ============================================
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# Variable de entorno para React (debe comenzar con REACT_APP_)
REACT_APP_BACKEND_URL=http://localhost:3010

# ============================================
# Configuración de CORS
# ============================================
# Orígenes permitidos para CORS (separados por coma)
CORS_ORIGIN=http://localhost:3000

# ============================================
# Entorno
# ============================================
NODE_ENV=development
